#
# Aliases
#

# Generally useful shorthand
alias bc='bc -q'
alias cpr='cp -R'
alias trees='tree | less'
alias rmr='rm -r'
alias rmrf='rm -rf'
alias wcc='wc -c'
alias wcl='wc -l'
alias dush='du -sh'
alias dusch='du -sch'
alias dfh='df -h'
alias mkdirp='mkdir -p'

# Move ^V clipboard to middle-click clipboard and vice versa
alias ptm='xclip -selection c -o | xclip'
alias mtp='xclip -o | xclip -selection c'

# modify default behaviors
alias ls='ls --group-directories-first --color=auto'

# ls shorthand
alias l='ls -AFl'
alias lsd='ls -d'

# git shorthand
alias git-fix='git status | grep deleted | sed -e "s/^#\tdeleted: *//" | xargs -d "\n" git rm;'

alias v='vim'
alias vi='vim'

alias top='htop'

# Personal preferences
alias journal='vim ~/journal/`date +%Y.%m.%d`'

# Apt aliases
alias sagi='sudo apt-get install'
alias sagu='sudo bash -c "apt-get update && apt-get upgrade && apt-get autoremove"'
alias sagr='sudo apt-get remove'
alias acs='apt-cache search'

# Auto-sudo
alias iptables='sudo iptables'
alias iptraf='sudo iptraf'

alias psed='perl -p'
