#
# Aliases
#

# Generally useful shorthand
alias bc='bc -q'
alias cpr='cp -R'
alias greater='ls | more'
alias fewer='ls | less'
alias trees='tree | less'
alias rmr='rm -r'
alias rmrf='rm -rf'
alias wcc='wc -c'
alias wcl='wc -l'
alias dush='du -sh'
alias dusch='du -sch'
alias dfh='df -h'
alias mkdirp='mkdir -p'

# Move ^V clipboard to middle-click clipboard
alias ptm='xclip -selection c -o | xclip'

# modify default behaviors
alias ls='ls --group-directories-first'

# ls shorthand
alias l='ls -AFl' # Show me all!

alias lsa='ls -A'
alias lsc='ls --color=auto'
alias lsd='ls -d'
alias lsf='ls -F'
alias lsl='ls -l'
alias lss='ls -s'

# git shorthand
alias git-fix='git status | grep deleted | sed -e "s/^#\tdeleted: *//" | xargs -d "\n" git rm;'

alias v='vim'
alias vi='vim'

alias top='htop'

# Personal preferences
alias playiso='mplayer dvd:// -dvd-device'
alias journal='vim ~/journal/`date +%Y.%m.%d`'
alias lock='xtrlock &;disown; exit'

# Apt aliases
alias sagi='sudo apt-get install'
alias sagu='sudo apt-get update;sudo apt-get upgrade'
alias sagr='sudo apt-get remove'
alias acs='apt-cache search'

# Auto-sudo
alias synaptic='sudo synaptic'
alias gem='sudo gem'
alias cpan='sudo cpan'
alias iptables='sudo iptables'
alias iptraf='sudo iptraf'
alias ntpupdate='sudo /etc/network/if-up.d/ntpdate restart'

# Stupid name fix
alias office='ooffice'

# Amarok aliases; primarily useful if you're not in the same X session
# 
# Also handy:
# sleep 60m; pause
alias pause='amarok -t'
alias play='dcop --user chris amarok player play'
alias next='dcop --user chris amarok player next'
alias prev='dcop --user chris amarok player prev'

alias psed='perl -p'

alias android-connect="mtpfs -o allow_other /media/nexus"
alias android-disconnect="fusermount -u /media/nexus"

